<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_ir_a_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir a Lista"/>

    <Button
        android:id="@+id/btn_ir_a_sqlite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir a SQLite"/>

    <Button
        android:id="@+id/btn_fragment_uno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargar Fragment Uno"/>

    <Button
        android:id="@+id/btn_fragment_dos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargar Fragment Dos"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>


